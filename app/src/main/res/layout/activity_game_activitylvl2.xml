<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundformyasshole"
    android:orientation="vertical"
    tools:context="com.example.bro010.starcatcherv3.GameActivity">

    <TextView
        android:id="@+id/scoretxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Score: 0"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/txtLive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lives:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/starttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:text="Tap To Play "
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/character"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/whyudothisjava" />

        <ImageView
            android:id="@+id/smallpoints"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pointsa" />

        <ImageView
            android:id="@+id/bigpoints"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pointsb" />

        <ImageView
            android:id="@+id/death"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deathup" />

        <ImageView
            android:id="@+id/death2"
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deathup" />

        <ImageView
            android:id="@+id/death3"
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deathup"
            />
        <ImageView
            android:id="@+id/death4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deathup" />
    </FrameLayout>


</LinearLayout>
